{
  "name": "react-locomotive-scroll",
  "version": "0.2.2",
  "description": "A locomotive-scroll React wrapper",
  "main": "module/index.js",
  "module": "module/index.js",
  "typings": "module/index.d.ts",
  "repository": "git@github.com:toinelin/react-locomotive-scroll.git",
  "author": "Antoine <contact@antoinelin.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "locomotive-scroll",
    "smooth-scroll",
    "typescript"
  ],
  "files": [
    "lib",
    "module"
  ],
  "scripts": {
    "build": "rm -rf ./module && tsc",
    "lint": "eslint --quiet",
    "format": "prettier --debug-check lib/**/*.{ts,tsx}",
    "prepare:husky": "husky install && sh ./husky.sh",
    "prepare": "yarn prepare:husky && yarn lint && yarn format && yarn build",
    "pre-commit": "yarn lint && yarn format && lint-staged",
    "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
    "release": "dotenv release-it --",
    "pre-release": "dotenv release-it major --preRelease=beta --"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "lib/**/*.{ts,tsx,js,jsx,md}": [
      "eslint --quiet",
      "prettier --write"
    ]
  },
  "dependencies": {
    "use-debounce": "6.0.1",
    "use-resize-observer": "6.1.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "5.0.0",
    "@types/react": "17.0.1",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "commitizen": "4.2.3",
    "dotenv-cli": "6.0.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.2.1",
    "prettier-plugin-organize-imports": "1.1.1",
    "release-it": "15.1.3",
    "typescript": "4.7.4"
  },
  "peerDependencies": {
    "locomotive-scroll": "^4.1.4",
    "react": "^18.0.2"
  }
}
